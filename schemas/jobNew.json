{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/jobNew.schema.json",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "salary": {
            "type": "integer",
            "minimum": 0
        },
        "equity": {
            "type": "number",
            "maximum": 1.0,
            "minimum": 0
        },
        "company_handle": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "title",
        "company_handle"
    ]
}